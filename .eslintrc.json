{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": ["plugin:prettier/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "always",
				"trailingComma": "es5",
				"semi": true,
				"useTabs": true,
				"tabWidth": 0,
				"quoteProps": "as-needed",
				"printWidth": 80,
				"endOfLine": "crlf",
				"bracketSpacing": true
			}
		]
	}
}
